    <script>
        function showTab(tabId) {
            // Ocultar todos los contenidos de las pestañas
            var tabContents = document.querySelectorAll('.tab-content');
            tabContents.forEach(function(content) {
                content.classList.add('hidden');
            });

            // Quitar la clase activa de todos los botones
            var tabButtons = document.querySelectorAll('nav button');
            tabButtons.forEach(function(button) {
                button.classList.remove('text-orange-500', 'border-orange-500');
                button.classList.add('text-green-200');
            });

            // Mostrar el contenido de la pestaña seleccionada
            var selectedTab = document.getElementById(tabId);
            selectedTab.classList.remove('hidden');

            // Añadir la clase activa al botón seleccionado
            var selectedButton = document.querySelector('button[onclick="showTab(\'' + tabId + '\')"]');
            selectedButton.classList.add('text-orange-500', 'border-orange-500');
            selectedButton.classList.remove('text-green-200');
        }

        function increment(inputId) {
            var input = document.getElementById(inputId);
            var currentValue = parseInt(input.value);
            input.value = currentValue + 1;
        }

        function decrement(inputId) {
            var input = document.getElementById(inputId);
            var currentValue = parseInt(input.value);
            if (currentValue > 0) {
                input.value = currentValue - 1;
            }
        }

        function calcularTarifa() {
            var ubicacion = document.querySelector('input[name="ubicacion"]:checked').value;
            var standalone = parseFloat(document.querySelector('input[name="standalone"]:checked').value);
            var package = parseFloat(document.querySelector('input[name="package"]:checked').value);
            var BAM = parseFloat(document.querySelector('input[name="BAM"]:checked').value);
            var linea60 = parseInt(document.getElementById('linea60').value) * 12;
            var lineaIlimitada = parseInt(document.getElementById('lineaIlimitada').value) * 15;

            var subtotal = standalone + package + BAM + linea60 + lineaIlimitada;

            var tasa = 0;
            if (ubicacion === 'peninsula') {
                tasa = 0.21;
            } else if (ubicacion === 'ceuta_melilla') {
                tasa = 0.1;
            } else if (ubicacion === 'canarias') {
                tasa = 0.07;
            }

            var total = subtotal * (1 + tasa);

            document.getElementById('resultado-final').innerText = total.toFixed(2) + ' €';
        }

        document.addEventListener('DOMContentLoaded', function() {
            showTab('tab1'); // Mostrar la primera pestaña al cargar la página
        });
    </script>

